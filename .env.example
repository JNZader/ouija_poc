# ===========================================
# ENVIRONMENT CONFIGURATION
# ===========================================
NODE_ENV=development
PORT=3000

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DATABASE_URL="postgresql://ouija_user:ouija_pass@localhost:5432/ouija_db"

# For Docker Compose
DB_USER=ouija_user
DB_PASSWORD=ouija_password
DB_NAME=ouija_db
DB_PORT=5432

# ===========================================
# REDIS CONFIGURATION
# ===========================================
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_PASSWORD=""

# ===========================================
# AI ENGINES CONFIGURATION
# ===========================================

# Ollama (Local AI)
OLLAMA_URL="http://localhost:11434"
OLLAMA_HOST="http://localhost:11434"
OLLAMA_MODEL="qwen2.5:3b"
OLLAMA_TIMEOUT=60000

# DeepSeek (Cloud AI - Fallback)
DEEPSEEK_API_KEY=""
DEEPSEEK_BASE_URL="https://api.deepseek.com"
DEEPSEEK_TIMEOUT=30000

# Default AI Engine (ollama or deepseek)
DEFAULT_AI_ENGINE="ollama"

# ===========================================
# SECURITY & CORS
# ===========================================
ALLOWED_ORIGINS="http://localhost:3001,http://localhost:5173"

# Rate Limiting
RATE_LIMIT_TTL=60000
RATE_LIMIT_MAX=100

# ===========================================
# LOGGING
# ===========================================
LOG_LEVEL=debug
ENABLE_FILE_LOGGING=false

# ===========================================
# MONITORING (Prometheus & Grafana)
# ===========================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin
GRAFANA_ROOT_URL=http://localhost:3001

# ===========================================
# DEPLOYMENT (Production/Staging)
# ===========================================
API_PORT=3000

# Production URLs (configure for your deployment)
# PRODUCTION_URL=https://api.ouija-virtual.com
# STAGING_URL=https://staging-api.ouija-virtual.com
